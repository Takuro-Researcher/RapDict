<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="data" type="com.rapdict.takuro.rapdict.userSetting.UserSettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userSetting.UserSettingFragment">

    <TextView
        android:padding="30dp"
        android:layout_margin="10dp"
        android:id="@+id/user_name_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="MC名"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:padding="30dp"
        android:hint="@string/user_name"
        android:text="@{data.userName}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/user_name_disp"/>
    <TextView
        android:padding="30dp"
        android:layout_margin="10dp"
        android:id="@+id/rhyme_num_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="踏んだ韻"
        app:layout_constraintTop_toBottomOf="@+id/user_name_disp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_margin="10dp"
        android:padding="30dp"
        android:id="@+id/rhyme_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@{data.rhymeCount}"
        app:layout_constraintTop_toBottomOf="@id/user_name_disp"
        app:layout_constraintStart_toEndOf="@id/rhyme_num_disp"/>
    <TextView
        android:padding="30dp"
        android:layout_margin="10dp"
        android:id="@+id/target_rhyme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="今日踏む韻"
        app:layout_constraintTop_toBottomOf="@+id/rhyme_num_disp"
        app:layout_constraintStart_toStartOf="parent"/>
     <Spinner
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/target_spinner"
         app:layout_constraintStart_toEndOf="@id/target_rhyme"
         app:layout_constraintTop_toTopOf="@id/target_rhyme"
         app:layout_constraintBottom_toBottomOf="@+id/target_rhyme"
         android:entries="@{data.numberArray}"

         tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/rename_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="90dp"
        android:padding="20dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/target_rhyme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="名前を変更する" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>