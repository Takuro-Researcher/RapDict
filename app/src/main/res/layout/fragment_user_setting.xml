<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserSetting.UserSettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:padding="30dp"
        android:layout_margin="10dp"
        android:id="@+id/user_name_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="MC名"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:padding="30dp"
        android:hint="@string/user_name_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/exp_disp"/>
    <TextView
        android:padding="30dp"
        android:layout_margin="10dp"
        android:id="@+id/exp_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="経験値"
        app:layout_constraintTop_toBottomOf="@+id/user_name_disp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_margin="10dp"
        android:padding="30dp"
        android:id="@+id/user_exp_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edit_user_name"
        app:layout_constraintStart_toEndOf="@id/exp_disp"/>
    <TextView
        android:padding="30dp"
        android:layout_margin="10dp"
        android:id="@+id/rhyme_num_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="踏んだ韻"
        app:layout_constraintTop_toBottomOf="@+id/exp_disp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_margin="10dp"
        android:padding="30dp"
        android:id="@+id/rhyme_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/user_exp_num"
        app:layout_constraintStart_toEndOf="@id/exp_disp"/>

    <Button
        android:id="@+id/rename_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="90dp"
        android:padding="30dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/rhyme_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="名前を変更する" />


</android.support.constraint.ConstraintLayout>