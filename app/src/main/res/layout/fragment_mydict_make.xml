<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable name="data" type="com.rapdict.takuro.rapdict.myDict.MyDictMakeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userSetting.UserSettingFragment">
        <TextView
            android:padding="30dp"
            android:layout_margin="10dp"
            android:id="@+id/mydict_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="新たに辞書を作成"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/mydict_header"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:paddingLeft="20sp"
                android:layout_margin="10dp"
                android:id="@+id/mydict_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:text="辞書の名前"
                />

            <EditText
                android:id="@+id/mydict_name_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:text="@={data.dictName}"
                android:hint="例：好きな曲"
                />
        </LinearLayout>
        　<Button
            android:id="@+id/mydict_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="90dp"
            android:padding="20dp"
            android:elevation="6dp"
            android:enabled="@{data.canSubmit}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="辞書を作成する" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>