<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="settingData" type="com.rapdict.takuro.rapdict.gameSetting.GameSettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHeight_default= "percent"
        app:layout_constraintHeight_percent= "1.00"
        android:focusableInTouchMode="true"
        android:background="#FFFFFF"
        tools:context=".game.GamePlayFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default= "percent"
            app:layout_constraintHeight_percent= ".14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:id="@+id/question_row"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:id="@+id/question_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintWidth_default = "percent"
                app:layout_constraintWidth_percent= "0.7"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/question_spinner"
                app:layout_constraintStart_toStartOf="parent"
                android:text="問題数" />
            <Spinner
                android:id="@+id/question_spinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/question_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@{settingData.questionArray}"
                android:dropDownWidth="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintHeight_default= "percent"
            app:layout_constraintHeight_percent= ".14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/question_row"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:id="@+id/time_row"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/time_text"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintWidth_default = "percent"
                app:layout_constraintWidth_percent= "0.7"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/time_spinner"
                app:layout_constraintStart_toStartOf="parent"
                android:text="制限時間" />
            <Spinner
                android:id="@+id/time_spinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/time_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@{settingData.timeArray}"
                android:dropDownWidth="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintHeight_default= "percent"
            app:layout_constraintHeight_percent= ".14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/time_row"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:id="@+id/min_row"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/min_text"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintWidth_default = "percent"
                app:layout_constraintWidth_percent= "0.7"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/min_spinner"
                app:layout_constraintStart_toStartOf="parent"
                android:text="最小文字" />
            <Spinner
                android:id="@+id/min_spinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/min_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@{settingData.minArray}"
                android:dropDownWidth="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintHeight_default= "percent"
            app:layout_constraintHeight_percent= ".14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/min_row"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:id="@+id/max_row"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/max_text"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintWidth_default = "percent"
                app:layout_constraintWidth_percent= "0.7"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/max_spinner"
                app:layout_constraintStart_toStartOf="parent"
                android:text="最大文字" />
            <Spinner
                android:id="@+id/max_spinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/max_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@{settingData.maxArray}"
                android:dropDownWidth="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default= "percent"
            app:layout_constraintHeight_percent= ".14"
            app:layout_constraintTop_toBottomOf="@id/max_row"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:id="@+id/return_row"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/return_text"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintWidth_default = "percent"
                app:layout_constraintWidth_percent= "0.7"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/return_spinner"
                app:layout_constraintStart_toStartOf="parent"
                android:text="返す数" />
            <Spinner
                android:id="@+id/return_spinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/return_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@{settingData.returnArray}"
                android:dropDownWidth="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default= "percent"
            app:layout_constraintHeight_percent= ".14"
            app:layout_constraintTop_toBottomOf="@id/return_row"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:id="@+id/dict_row"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/dict_text"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintWidth_default = "percent"
                app:layout_constraintWidth_percent= "0.7"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dict_spinner"
                app:layout_constraintStart_toStartOf="parent"
                android:text="使う辞書" />
            <Spinner
                android:id="@+id/dict_spinner"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintHeight_default= "percent"
                app:layout_constraintHeight_percent= "1.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dict_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:entries="@{settingData.timeArray}"
                android:dropDownWidth="match_parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/start_button"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dict_row"
            android:layout_margin="20sp"
            android:text="保存する"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>