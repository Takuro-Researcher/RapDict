<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserExpFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:padding="20dp"
        android:id="@+id/hello_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ようこそ！！"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:padding="20dp"
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/hello_message"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:padding="20dp"
        android:id="@+id/current_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="あなたの現在の称号は"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/shougou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/current_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/next_exp_disp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="次の称号まで"
        app:layout_constraintTop_toBottomOf="@id/shougou"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_width="260dp"
        app:layout_constraintTop_toBottomOf="@+id/next_exp_disp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="false"
        style="@android:style/Widget.ProgressBar.Horizontal"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>